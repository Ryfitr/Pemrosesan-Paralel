{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C++ (CPU)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-O2",
                "-std=c++17"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "Build CUDA (GPU)",
            "command": "C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v13.0/bin/nvcc.exe",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "${file}",
                "-O2"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}